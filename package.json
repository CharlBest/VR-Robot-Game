{
  "name": "app",
  "version": "0.0.4",
  "description": "A sample Angular, Node.js and Neo4j app",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/CharlBest/nean-stack-starter"
  },
  "keywords": [
    "angular",
    "node",
    "neo4j",
    "heroku"
  ],
  "engines": {
    "node": "6.11.1"
  },
  "scripts": {
    "ng": "ng",
    "dev": "concurrently \"ng build --watch\" \"webpack --watch\" \"nodemon dist/server/app.bundle.js\"",
    "start": "node dist/server/app.bundle.js",
    "build": "ng build --prod && webpack",
    "postinstall":  "ng build --prod && webpack",    
    "test": "echo \"Error: no test... minimal project\" && exit 1",
    "lint": "echo \"Error: no lint... minimal project\" && exit 1",
    "e2e": "echo \"Error: no e2e... minimal project\" && exit 1",
    "i18n": "./node_modules/.bin/ng-xi18n --i18nFormat xlf",
    "build:en": "ng build --prod --aot --locale en-US --i18n-format xlf --i18n-file src/locale/messages.en-US.xlf --output-path ../web/dist/en-US",
    "build:af": "ng build --prod --aot --locale af-ZA --i18n-format xlf --i18n-file src/locale/messages.af-ZA.xlf --output-path ../web/dist/af-ZA",
    "build-i18n": "npm run build:en && npm run build:af"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.3.6",
    "@angular/cdk": "^2.0.0-beta.11",
    "@angular/common": "^4.3.6",
    "@angular/compiler": "^4.3.6",
    "@angular/core": "^4.3.6",
    "@angular/forms": "^4.3.6",
    "@angular/http": "^4.3.6",
    "@angular/material": "^2.0.0-beta.11",
    "@angular/platform-browser": "^4.3.6",
    "@angular/platform-browser-dynamic": "^4.3.6",
    "@angular/router": "^4.3.6",
    "@angular/cli": "^1.4.3",
    "@angular/compiler-cli": "^4.3.6",
    "typescript": "^2.4.0",
    "dotenv-webpack": "^1.5.4",
    "ts-loader": "^2.3.7",
    "@sendgrid/mail": "^6.1.4",
    "body-parser": "^1.18.2",
    "compression": "^1.7.0",
    "core-js": "^2.4.1",
    "cors": "^2.8.1",
    "concurrently": "^3.5.0",
    "emojione": "^3.1.2",
    "express": "^4.15.5",
    "hammerjs": "^2.0.8",
    "jsonwebtoken": "^8.0.1",
    "neo4j-driver": "^1.4.1",
    "ngx-clipboard": "^8.0.4",
    "node-uuid": "^1.4.7",
    "rxjs": "^5.1.0",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/language-service": "^4.3.6",
    "@types/body-parser": "^1.16.5",
    "@types/compression": "^0.0.34",
    "@types/cors": "^2.8.1",
    "@types/emojione": "^2.2.1",
    "@types/express": "^4.0.37",
    "@types/jsonwebtoken": "^7.2.3",
    "@types/lodash": "^4.14.76",
    "@types/marked": "0.3.0",
    "@types/node": "^8.0.31",
    "@types/node-uuid": "^0.0.28",
    "@types/stripe-checkout": "^1.0.1",
    "@types/webpack": "^3.0.12",
    "codelyzer": "^3.2.0",
    "nodemon": "^1.12.1",
    "tslint": "^5.7.0"
  }
}
